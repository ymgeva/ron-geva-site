---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../../utils/i18n';

export async function getStaticPaths() {
  return [{ params: { lang: 'en' } }, { params: { lang: 'he' } }];
}

const { lang } = Astro.params;
const title = lang === 'he' ? 'רון גבע - אמנות מהסוג המרגש' : 'Ron Geva - Art of the Moving Kind';
---

<BaseLayout title={title}>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 max-w-6xl mx-auto px-4 py-8">
    <!-- About -->
    <a 
      href={`/${lang}/about`}
      class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 aspect-[16/9]"
    >
      <img 
        src="/images/home-4.jpg" 
        alt={lang === 'he' ? 'אודות' : 'About'}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
      <div class="absolute top-0 {lang === 'he' ? 'right-0' : 'left-0'} text-white px-6" style="background-color: rgba(128, 126, 125, 0.8); height: 33pt; display: flex; align-items: center;">
        <span style={`font-size: 18pt; font-family: ${lang === 'he' ? 'Alef' : 'Source Sans 3'}, sans-serif;`}>
          {lang === 'he' ? 'אודות' : 'About'}
        </span>
      </div>
    </a>

    <!-- Art -->
    <a 
      href={`/${lang}/art`}
      class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 aspect-[16/9]"
    >
      <img 
        src="/images/home-2.jpg" 
        alt={lang === 'he' ? 'אמנות' : 'Art'}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
      <div class="absolute top-0 {lang === 'he' ? 'right-0' : 'left-0'} text-white px-6" style="background-color: rgba(128, 126, 125, 0.8); height: 33pt; display: flex; align-items: center;">
        <span style={`font-size: 18pt; font-family: ${lang === 'he' ? 'Alef' : 'Source Sans 3'}, sans-serif;`}>
          {lang === 'he' ? 'אמנות' : 'Art'}
        </span>
      </div>
    </a>

    <!-- Book -->
    <a 
      href={`/${lang}/book`}
      class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 aspect-[16/9]"
    >
      <img 
        src="/images/home-5.jpg" 
        alt={lang === 'he' ? 'ספר' : 'Book'}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
      <div class="absolute top-0 {lang === 'he' ? 'right-0' : 'left-0'} text-white px-6" style="background-color: rgba(128, 126, 125, 0.8); height: 33pt; display: flex; align-items: center;">
        <span style={`font-size: 18pt; font-family: ${lang === 'he' ? 'Alef' : 'Source Sans 3'}, sans-serif;`}>
          {lang === 'he' ? 'ספר' : 'Book'}
        </span>
      </div>
    </a>

    <!-- Blog -->
    <a 
      href={`/${lang}/blog`}
      class="group relative overflow-hidden rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 aspect-[16/9]"
    >
      <img 
        src="/images/home-3.jpg" 
        alt={lang === 'he' ? 'בלוג' : 'Blog'}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      />
      <div class="absolute top-0 {lang === 'he' ? 'right-0' : 'left-0'} text-white px-6" style="background-color: rgba(128, 126, 125, 0.8); height: 33pt; display: flex; align-items: center;">
        <span style={`font-size: 18pt; font-family: ${lang === 'he' ? 'Alef' : 'Source Sans 3'}, sans-serif;`}>
          {lang === 'he' ? 'בלוג' : 'Blog'}
        </span>
      </div>
    </a>
  </div>
</BaseLayout>
