---
import '../styles/global.css';
import { getLangFromUrl, languages } from '../utils/i18n';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Ron Geva - Interdisciplinary Artist' } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const dir = lang === 'he' ? 'rtl' : 'ltr';
---

<!doctype html>
<html lang={lang} dir={dir}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/images/home-1.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content={lang === 'he' ? 'he_IL' : 'en_US'} />
    
    <!-- Netlify Identity Widget for CMS authentication -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
  </head>
  <body class="min-h-screen flex flex-col bg-white text-gray-900">
    <Header />
    <main class="flex-1 container mx-auto px-4 py-8" style="max-width: 1000px;">
      <slot />
    </main>
    <Footer />
    
    <script is:inline>
      // Handle Netlify Identity authentication events
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", user => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/he/cms";
            });
          }
        });
      }
    </script>
  </body>
</html>
